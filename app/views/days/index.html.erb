<h1>Listing days</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Score0</th>
    <th>Score1</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @days.each do |day| %>
  <tr>
    <td><%= day.date %></td>
    <td><%= day.score0 %></td>
    <td><%= day.score1 %></td>
    <td><%= link_to 'Show', day %></td>
    <td><%= link_to 'Edit', edit_day_path(day) %></td>
    <td><%= link_to 'Destroy', day, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

